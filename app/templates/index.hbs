<div class="app-body">
  <h2 class="lead">Obsidian MasterNode Dashboard</h2>

  <div class="xx-row">
    <div class="xx-span-6">
      <h3 class="title">Server Status</h3>
      <h4 class="theme-action">
        {{model.systemInfo.os.distro}} // <span>{{model.systemInfo.os.release}}</span>
      </h4>
      <div class="xx-card">
        <div class="xx-data-split split-right">
          <dl class="data-display inverse">
            <dt>
              {{format-bytes model.systemInfo.storageLeft unitWrap="true"}}
            </dt>
            <dd>Free Space</dd>
          </dl>
          <dl class="hide data-display inverse">
            <dt>
              {{format-bytes model.systemInfo.storageLeft unitWrap="true"}} /
              <span class="theme-action">{{format-bytes model.systemInfo.storage.size unitWrap="true"}}</span>
            </dt>
            <dd>Free Space</dd>
          </dl>
          <dl class="data-display inverse">
            <dt>
              {{format-bytes model.systemInfo.memoryLeft unitWrap="true"}}
            </dt>
            <dd>Free Memory</dd>
          </dl>
        </div>
      </div>

      <h3 class="title u-margin-top-sm ">Network Status</h3>
      <h4 class=""><span class="theme-action">{{model.odnDataInfo.connections}}</span> <span class="muted small">Connected Peers</span>
      </h4>
      <div class="xx-card">
        <div class="xx-data-split split-right">
          <dl class="data-display inverse">
            <dt>{{format-bytes model.odnDataNetwork.totalbytessent unitWrap="true"}}</dt>
            <dd>Bytes Sent</dd>
          </dl>
          <dl class="data-display inverse">
            <dt>{{format-bytes model.odnDataNetwork.totalbytesrecv unitWrap="true"}}</dt>
            <dd>Bytes Received</dd>
          </dl>
        </div>
      </div>
    </div>

    <div class="xx-span-6">
      <h3 class="title">Node Status</h3>
      <h4 class="{{if model.odnDataStaking.staking "theme-action" "theme-warning"}}">
        {{if model.odnDataStaking.staking "STAKING" "NOT STAKING"}}
        <small>{{format-node-version model.odnDataInfo.version}}</small>
      </h4>
      <div class="xx-card">
        <div class="xx-data-split split-right {{if model.odnDataStaking.staking "split-first" ""}}">
          {{#if model.odnDataStaking.staking}}
            <dl class="data-display span2">
              <dt class="u-text-transform-capitalize">{{format-staking-time model.odnDataStaking.expectedtime unitWrap="true"}}</dt>
              <dd>Estimated Reward</dd>
            </dl>

            <dl class="data-display span2">
              <dt>{{format-unix model.odnDataInfo.unlocked_until}}</dt>
              <dd>Staking Until</dd>
            </dl>
            <hr class="split-bottom" />
          {{/if}}
          <dl class="data-display inverse">
            <dt>{{format-staking-weight model.odnDataStaking.weight}}</dt>
            <dd>Staking Weight</dd>
          </dl>
          <dl class="data-display inverse">
            <dt>{{model.odnDataInfo.balance}}</dt>
            <dd>Balance</dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

</div>
